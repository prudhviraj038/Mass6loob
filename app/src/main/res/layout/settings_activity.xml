<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/app_bg_blue"
        android:gravity="center">

        <ViewFlipper
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/viewFlipper" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp"
                    android:paddingTop="10dp"
                    android:paddingRight="30dp"
                    android:paddingBottom="10dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:background="@drawable/sett_rounded_corners"
                        android:id="@+id/edit_profile">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Edit Profile"
                            android:id="@+id/textView5"
                            android:textColor="#1d5c9f"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:background="@drawable/sett_rounded_corners"
                        android:layout_marginTop="5dp"
                        android:id="@+id/c_pass_ll" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Change Password"
                            android:id="@+id/c_pass_tv"
                            android:textColor="#1d5c9f"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:background="@drawable/sett_rounded_corners"
                        android:layout_marginTop="5dp"
                        android:id="@+id/logout">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Log out"
                            android:id="@+id/textView6"
                            android:textColor="#1d5c9f"
                            android:textSize="15sp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageView32"
                            android:layout_alignTop="@+id/linearLayout7"
                            android:layout_alignLeft="@+id/linearLayout7"
                            android:layout_alignBottom="@+id/linearLayout7"
                            android:layout_alignRight="@+id/linearLayout7"
                            android:src="@drawable/cross_bg_full"
                            android:adjustViewBounds="false"
                            android:scaleType="fitXY" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/linearLayout7"
                            android:paddingTop="30dp"
                            android:paddingBottom="20dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:showDividers="middle"
                            android:visibility="visible" >

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:divider="@drawable/whitedivider"
                                android:showDividers="middle" >

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/rounded_corners"
                                    android:gravity="center_vertical" >

                                    <EditText
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/et_o_pass"
                                        android:background="#00000000"
                                        android:hint="Old Password"
                                        android:textColorHint="@color/edit_text_hint_color"
                                        android:textSize="15sp"
                                        android:textColor="@color/edit_text_text_color"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="5dp"
                                        android:inputType="textPassword" />
                                </LinearLayout>

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/rounded_corners"
                                    android:gravity="center_vertical"
                                    android:id="@+id/linearLayout3" >

                                    <EditText
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/et_n_pass"
                                        android:background="#00000000"
                                        android:hint="New Password"
                                        android:textColorHint="@color/edit_text_hint_color"
                                        android:textSize="15sp"
                                        android:textColor="@color/edit_text_text_color"
                                        android:inputType="textNoSuggestions|textPassword"
                                        android:layout_weight="1"
                                        android:layout_marginRight="5dp"
                                        android:layout_marginLeft="5dp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/rounded_corners"
                                    android:gravity="center_vertical"
                                    android:id="@+id/linearLayout4" >

                                    <EditText
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/et_c_pass"
                                        android:background="#00000000"
                                        android:hint="Confirm Password"
                                        android:textColorHint="@color/edit_text_hint_color"
                                        android:textSize="15sp"
                                        android:textColor="@color/edit_text_text_color"
                                        android:layout_weight="1"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="5dp"
                                        android:inputType="textPassword" />

                                </LinearLayout>

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:background="@drawable/submit_rounded_corners"
                                    android:id="@+id/submit__c_ll"
                                    android:layout_marginTop="10dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="SUBMIT"
                                        android:id="@+id/submit__c_tv"
                                        android:textColor="#FFFFFF" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

        </ViewFlipper>

    </LinearLayout>
</LinearLayout>