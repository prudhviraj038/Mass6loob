<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/app_bg_blue">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView2" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="30dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView2"
                        android:layout_alignTop="@+id/linearLayout"
                        android:layout_alignLeft="@+id/linearLayout"
                        android:layout_alignBottom="@+id/linearLayout"
                        android:layout_alignRight="@+id/linearLayout"
                        android:src="@drawable/cross_bg_full"
                        android:adjustViewBounds="false"
                        android:scaleType="fitXY" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linearLayout"
                        android:paddingTop="30dp"
                        android:paddingBottom="20dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:showDividers="middle"
                        android:visibility="visible">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:divider="@drawable/whitedivider"
                            android:showDividers="middle">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/rounded_corners"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:id="@+id/imageView3"
                                    android:src="@drawable/ic_company"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp" />

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="15dp"
                                    android:layout_height="match_parent"></LinearLayout>

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/company_name"
                                    android:background="#00000000"
                                    android:hint="Company Name"
                                    android:textColorHint="@color/edit_text_hint_color"
                                    android:textSize="16sp"
                                    android:textColor="@color/edit_text_text_color" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/rounded_corners"
                                android:gravity="center_vertical"
                                android:visibility="gone">

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:id="@+id/imageView4"
                                    android:src="@drawable/ic_password"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp" />

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="15dp"
                                    android:layout_height="match_parent" />

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/company_pwd"
                                    android:background="#00000000"
                                    android:hint="Password"
                                    android:textColorHint="@color/edit_text_hint_color"
                                    android:textSize="16sp"
                                    android:textColor="@color/edit_text_text_color"
                                    android:inputType="textPassword" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/rounded_corners"
                                android:gravity="center_vertical" >

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:id="@+id/imageView5"
                                    android:src="@drawable/ic_gender"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp" />

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="15dp"
                                    android:layout_height="match_parent" />

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/intrested_in"
                                    android:background="#00000000"
                                    android:hint="Intrested In"
                                    android:textColorHint="@color/edit_text_hint_color"
                                    android:textSize="16sp"
                                    android:textColor="@color/edit_text_text_color" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/rounded_corners"
                                android:gravity="center_vertical"
                                android:id="@+id/kkk">

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:id="@+id/imageView6"
                                    android:src="@drawable/ic_established"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp" />

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="15dp"
                                    android:layout_height="match_parent" />

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/established_date"
                                    android:background="#00000000"
                                    android:hint="Established Date"
                                    android:textColorHint="@color/edit_text_hint_color"
                                    android:textSize="16sp"
                                    android:textColor="@color/edit_text_text_color"
                                    android:inputType="date" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/rounded_corners"
                                android:gravity="center_vertical" >

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:id="@+id/imageView7"
                                    android:src="@drawable/ic_location"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp" />

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="15dp"
                                    android:layout_height="match_parent" />

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/company_area"
                                    android:background="#00000000"
                                    android:hint="Area"
                                    android:textColorHint="@color/edit_text_hint_color"
                                    android:textSize="16sp"
                                    android:textColor="@color/edit_text_text_color" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/rounded_corners"
                                android:gravity="center_vertical"
                                android:id="@+id/vol_com_logo_ll">

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:id="@+id/ic_logo"
                                    android:src="@drawable/ic_upload"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp" />

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="15dp"
                                    android:layout_height="match_parent" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/company_logo"
                                    android:background="#00000000"
                                    android:hint="Upload Company Logo"
                                    android:textColorHint="@color/edit_text_hint_color"
                                    android:textSize="16sp"
                                    android:textColor="@color/edit_text_text_color" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="top"
                                android:background="@drawable/rounded_corners">

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:layout_width="18dp"
                                        android:layout_height="18dp"
                                        android:id="@+id/imageView9"
                                        android:src="@drawable/ic_country"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp" />

                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="15dp"
                                        android:layout_height="match_parent" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/volunteer_ctgry_ll"
                                        android:background="#00000000"
                                        android:textColorHint="@color/edit_text_hint_color"
                                        android:textSize="16sp"
                                        android:textColor="@color/edit_text_text_color"
                                        android:gravity="top"
                                        android:hint="Choose Categories" />
                                </LinearLayout>

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:baselineAligned="false">

                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:divider="@drawable/whitedivider"
                                        android:showDividers="middle">

                                        <LinearLayout
                                            android:orientation="horizontal"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:gravity="center_vertical">

                                            <ImageView
                                                android:layout_width="18dp"
                                                android:layout_height="18dp"
                                                android:id="@+id/ic_tick1"
                                                android:src="@drawable/ic_checkbox"
                                                android:clickable="true" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Agriculture"
                                                android:id="@+id/agr_tv"
                                                android:textColor="@color/edit_text_text_color"
                                                android:layout_marginLeft="10dp"
                                                android:layout_marginRight="10dp"
                                                android:clickable="false" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:orientation="horizontal"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:gravity="center_vertical" >

                                            <ImageView
                                                android:layout_width="18dp"
                                                android:layout_height="18dp"
                                                android:id="@+id/ic_tick2"
                                                android:src="@drawable/ic_checkbox" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Islamic"
                                                android:id="@+id/isl_tv"
                                                android:textColor="@color/edit_text_text_color"
                                                android:layout_marginLeft="10dp"
                                                android:layout_marginRight="10dp" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:orientation="horizontal"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:gravity="center_vertical" >

                                            <ImageView
                                                android:layout_width="18dp"
                                                android:layout_height="18dp"
                                                android:id="@+id/ic_tick3"
                                                android:src="@drawable/ic_checkbox" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Tourisam"
                                                android:id="@+id/tour_tv"
                                                android:textColor="@color/edit_text_text_color"
                                                android:layout_marginLeft="10dp"
                                                android:layout_marginRight="10dp" />
                                        </LinearLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:divider="@drawable/whitedivider"
                                        android:showDividers="middle" >

                                        <LinearLayout
                                            android:orientation="horizontal"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:gravity="center_vertical" >

                                            <ImageView
                                                android:layout_width="18dp"
                                                android:layout_height="18dp"
                                                android:id="@+id/ic_tick4"
                                                android:src="@drawable/ic_checkbox" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Agriculture"
                                                android:id="@+id/textView8"
                                                android:textColor="@color/edit_text_text_color"
                                                android:layout_marginLeft="10dp"
                                                android:layout_marginRight="10dp" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:orientation="horizontal"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:gravity="center_vertical" >

                                            <ImageView
                                                android:layout_width="18dp"
                                                android:layout_height="18dp"
                                                android:id="@+id/ic_tick5"
                                                android:src="@drawable/ic_checkbox" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Islamic"
                                                android:id="@+id/textView9"
                                                android:textColor="@color/edit_text_text_color"
                                                android:layout_marginLeft="10dp"
                                                android:layout_marginRight="10dp" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:orientation="horizontal"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:gravity="center_vertical" >

                                            <ImageView
                                                android:layout_width="18dp"
                                                android:layout_height="18dp"
                                                android:id="@+id/ic_tick6"
                                                android:src="@drawable/ic_checkbox" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Tourisam"
                                                android:id="@+id/textView10"
                                                android:textColor="@color/edit_text_text_color"
                                                android:layout_marginLeft="10dp"
                                                android:layout_marginRight="10dp" />
                                        </LinearLayout>
                                    </LinearLayout>

                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"></LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Forgot Your Password?"
                            android:id="@+id/textView2"
                            android:textColor="#FFFFFF" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#FFFFFF"></LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"></LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Login Here"
                            android:id="@+id/textView3"
                            android:textColor="#FFFFFF"
                            android:visibility="gone" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#FFFFFF" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/signup_rounded_corners"
                    android:layout_margin="20dp"
                    android:id="@+id/company_signup_ll">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SIGN UP"
                        android:id="@+id/textView4"
                        android:textColor="#FFFFFF" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</LinearLayout>
